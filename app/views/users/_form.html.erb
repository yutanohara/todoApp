    <%= form.label t('activemodel.attributes.user.password') %>
    <%= form.text_field :password, required: true %>
  </div>
  <div class="field">
    <%= form.label t('activemodel.attributes.user.password_confirmation') %>
    <%= form.text_field :password_confirmation, required: true %>
  </div>
  <div class="field">
    <%= form.label "Eメール" %>
    <%= form.text_field :mail %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>